            Button:
                text: 'üìö\nTutorial'
                font_size: '18sp'
                background_color: 1, 0.6, 0.13, 1
                on_press: root.manager.current = 'tutorial'

            Button:
                text: '‚öôÔ∏è\nSettings'
                font_size: '18sp'
                background_color: 0.5, 0.5, 0.5, 1
